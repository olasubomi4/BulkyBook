@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BulkyBook.Models.CoverType>

@{
    ViewBag.Title = "Cover Type";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus"></i>  Create New Cover Type
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>Cover Type Name</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="50%">
                @obj.Name
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil"></i> Edit</a>
                </div>
            </td>
             <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i> Delete</a>
                            </div>
                        </td>
        </tr>
    } 
    
    
</table>

